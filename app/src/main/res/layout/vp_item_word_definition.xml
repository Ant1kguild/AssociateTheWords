<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_part_of_speech"
            style="@style/Style_bubble_part_of_speech"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:maxLines="1"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            tools:text="noun" />

        <TextView
            android:id="@+id/tv_word_definitions"
            style="@style/Style_bubble_translate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:maxLines="6"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_part_of_speech"
            tools:layout_editor_absoluteY="16dp"
            tools:text="BubbleLayout" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>